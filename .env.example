# Server Configuration
NODE_ENV=development
PORT=8080

# Client Configuration
CLIENT_URL=http://localhost:5173

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/intervi

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_ACCESS_SECRET=your-secret-key-min-32-characters-long-here
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-characters-long-here

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MINUTES=15

# Request Body Limits
BODY_LIMIT=10mb

# Logging
LOG_FORMAT=combined

# AI/ML Services (Optional)
TENSORFLOW_MODEL_PATH=/models
MEDIAPIPE_ENABLED=true

# File Storage (Optional)
STORAGE_PROVIDER=local
STORAGE_PATH=/uploads

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS S3 (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=intervi-uploads

# Sentry (Optional)
SENTRY_DSN=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=

# Features
ENABLE_CASE_STUDIES=true
ENABLE_GAMIFICATION=true
ENABLE_AI_COACHING=true
